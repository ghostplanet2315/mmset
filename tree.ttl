@prefix : <http://www.semanticweb.org/professioanl/familytree#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# --- Декларация классов ---
:Person rdf:type owl:Class .

:Parent rdf:type owl:Class ;
          rdfs:subClassOf :Person .
 
:Kid rdf:type owl:Class ;
         rdfs:subClassOf :Person .

# --- Свойства с ограничениями на классы ---
:hasParent rdf:type owl:ObjectProperty ;
               rdfs:domain :Kid ;        # Тот, кто имеет родителя - потомок
               rdfs:range :Parent ;        # Тот, кого имеют как родителя - родитель
               rdf:type owl:AsymmetricProperty .

:isParent rdf:type owl:ObjectProperty ,
                          owl:TransitiveProperty ;
                 rdfs:domain :Parent ;
                 rdfs:range :Kid .

:isKid rdf:type owl:ObjectProperty ;
                  owl:inverseOf :isParent ;
                  rdfs:domain :Kid ;
                  rdfs:range :Parent .

# --- Связываем базовое свойство с транзитивным ---
:hasParent rdfs:subPropertyOf [ rdf:type owl:ObjectProperty ;
                                     owl:inverseOf :isParent ] .

# --- Сущности с явным указанием классов ---
:Петр rdf:type :Person ;
      rdf:type :Parent .   

:Ольга rdf:type :Person ;
       rdf:type :Parent . 

:Иван rdf:type :Person ;
      rdf:type :Parent ,
               :Kid .    

:Мария rdf:type :Person ;
       rdf:type :Parent ,
                :Kid .   

:Алексей rdf:type :Person ;
         rdf:type :Kid . 

:Анна rdf:type :Person ;
      rdf:type :Kid .    

# --- Установление родительских связей ---
:Иван :hasParent :Петр .
:Иван :hasParent :Ольга .
:Алексей :hasParent :Иван .
:Алексей :hasParent :Мария .
:Анна :hasParent :Иван .
:Анна :hasParent :Мария .